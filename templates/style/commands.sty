% Išsireiškimo anglų kalba nurodymas.
\newcommand{\en}[1]{(ang. \emph{#1})}

% Svarbiam tekstui.
\newcommand{\strong}[1]{{\bf #1}}

% Tekstas formulėse.
\renewcommand\t[1]{\text{#1}}
\renewcommand\tfrac[2]{\frac{\text{#1}}{\text{#2}}}

% Vardinės nuorodos description sąrašams.
\makeatletter
\def\namedlabel#1#2{\begingroup
       #2%
       \def\@currentlabel{#2}%
       \phantomsection\label{#1}\endgroup
}
\makeatother

% Komentarai.
\definecolor{TODOColor}{rgb}{0.5, 0.2, 0.2}
\definecolor{FIXMEColor}{rgb}{0.8, 0.1, 0.1}
\newcommand{\FIXME}[1]{\textcolor{FIXMEColor}{\strong{FIXME:} \emph{#1}}}
\newcommand{\TODO}[1]{\textcolor{TODOColor}{\strong{TODO:} \emph{#1}}}
\newcommand{\NFIXME}[1]{\footnote{\strong{FIXME:} #1}}
\newcommand{\NTODO}[1]{\footnote{\strong{TODO:} #1}}
